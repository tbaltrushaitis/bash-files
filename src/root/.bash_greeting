#!/usr/bin/env bash
##  ┌──────────────────────────────────────────────────────────────────┐
##  │  ____    _    ____  _   _           _____ ___ _     _____ ____   │
##  │ | __ )  / \  / ___|| | | |         |  ___|_ _| |   | ____/ ___|  │
##  │ |  _ \ / _ \ \___ \| |_| |  _____  | |_   | || |   |  _| \___ \  │
##  │ | |_) / ___ \ ___) |  _  | |_____| |  _|  | || |___| |___ ___) | │
##  │ |____/_/   \_\____/|_| |_|         |_|   |___|_____|_____|____/  │
##  │                                                                  │
##  └──────────────────────────────────────────────────────────────────┘
##  ------------------------------------------------------------------------  ##
##  /root/.bash_greeting
##  ------------------------------------------------------------------------  ##

bf_banner;

##  ------------------------------------------------------------------------  ##
##                             Shell information                              ##
##  ------------------------------------------------------------------------  ##
echo -e "\n\tYour shell is ${Cyan}BASH${NC} v${Orange}${BASH_VERSION%(*}${NC} \
in [${Cyan}TTY${NC}:${Yellow}$(tty)${NC}]" ;

mesg n || true

echo -e "${NC}" ;
echo -e "\t${BYellow}${SUDO_USER:-Human}${NC}, you have ${BYellow}${On_Red}${USER} privileges${NC}. ${BYellow}${On_Blue}Be careful${NC}, please." ;
echo -e "\t[${BGray}$(date +'%T')${NC}] ${BYellow}${On_Black}Go on${NC} now ..." ;
echo -e "${NC}" ;
