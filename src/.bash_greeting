#!/usr/bin/env bash
##  ┌──────────────────────────────────────────────────────────────────┐
##  │  ____    _    ____  _   _           _____ ___ _     _____ ____   │
##  │ | __ )  / \  / ___|| | | |         |  ___|_ _| |   | ____/ ___|  │
##  │ |  _ \ / _ \ \___ \| |_| |  _____  | |_   | || |   |  _| \___ \  │
##  │ | |_) / ___ \ ___) |  _  | |_____| |  _|  | || |___| |___ ___) | │
##  │ |____/_/   \_\____/|_| |_|         |_|   |___|_____|_____|____/  │
##  │                                                                  │
##  └──────────────────────────────────────────────────────────────────┘
##  ------------------------------------------------------------------------  ##
##  ~/.bash_greeting
##  ------------------------------------------------------------------------  ##

bf_banner;

##  ------------------------------------------------------------------------  ##
##                             Shell information                              ##
##  ------------------------------------------------------------------------  ##
echo -e "\n\t${Cyan}BASH${NC} v${Orange}${BASH_VERSION%(*}${NC} \
in [${Cyan}TTY${NC}:${Yellow}$(tty)${NC}]" ;

mesg n || true

echo -e "${NC}" ;
echo -e "\t[${Gray}$(date +'%T')${NC}] ${White}Session Started${NC} for user [${BYellow}${On_Blue}${USER}${NC}:${Orange}${EUID}${NC}]" ;
echo -e "\t[${Gray}$(date +'%T')${NC}] Type ${BYellow}${On_Purple}bfh${NC} to see ${BYellow}${On_Red}BASH-FILES${NC} commands" ;
echo -e "${NC}" ;
